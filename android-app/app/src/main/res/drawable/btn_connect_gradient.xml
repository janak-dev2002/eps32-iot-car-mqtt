<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#3000fff7" />
            <corners android:radius="30dp" />
        </shape>
    </item>
    <!-- Gradient background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#00d4ff"
                android:endColor="#c51ada" />
            <corners android:radius="28dp" />
        </shape>
    </item>
</layer-list>
