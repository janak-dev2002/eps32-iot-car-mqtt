<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background fill -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2a2a3e" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <!-- Border glow effect -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#4000fff7" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>
